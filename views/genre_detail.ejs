<!DOCTYPE html>
<html>
  <head>
	<% include ./partials/head.ejs %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
          <% include ./partials/nav.ejs %>
        </div>
        <div class="col-sm-10">
			<h1><%=genre.name%></h1>

			<div id="genre_detail">
				<h4>Books</h4>
				<dl>
					<%if(genre_books.length>0){
						for(var i=0; genre_books.length>i; i++){%>
							<dt><a href=<%=genre_books[i].url%>><%=genre_books[i].title%></a></dt>
							<dd><%=genre_books[i].summary%></dd>
					<%	}
					} else {%>
						<p>This genre has no books</p>
					<%}%>
				</dl>
			</div>
		</div>
      </div>
    </div>
  </body>
</html>