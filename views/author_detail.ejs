<!DOCTYPE html>
<html>
  <head>
	<% include ./partials/head.ejs %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
          <% include ./partials/nav.ejs %>
        </div>
        <div class="col-sm-10">
			<h1><%=author.name%></h1>
			<p><%=author.author_life%></p>

			<div id="author_detail">
				<h4>Books</h4>
				<dl>
					<%if(author_books.length > 0){%>
						<%for(var i=0; author_books.length>i; i++){%>
							<dt>
								<a href=<%=author_books[i].url%>><%=author_books[i].title%></a>
							</dt>
							<dd>
								<%=author_books[i].summary%>
							</dd>
						<%}%>
					<%} else {%>
						<p>This author has no books.</p>
					<%}%>
				</dl>
			</div>
        </div>
      </div>
    </div>
  </body>
</html>