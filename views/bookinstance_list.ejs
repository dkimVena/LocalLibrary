<!DOCTYPE html>
<html>
  <head>
	<% include ./partials/head.ejs %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
          <% include ./partials/nav.ejs %>
        </div>
        <div class="col-sm-10">
			<h1><%= title %></h1>

			<ul>
			<% for(var i=0; i<bookinstance_list.length; i++) {%>
			   <li><a href=<%=bookinstance_list[i].url%>><%=bookinstance_list[i].book.title%> : <%=bookinstance_list[i].imprint%> - </a>
			   <% if(bookinstance_list[i].status == 'Available') { %>
			   	<span class="text-success"><%=bookinstance_list[i].status%></span>
			   <%} else if(bookinstance_list[i].status == 'Maintenance') {%>
			   	<span class="text-danger"><%=bookinstance_list[i].status%></span>
			   <%} else {%>
			   	<span class="text-warning"><%=bookinstance_list[i].status%></span>
			   <%}%>
			   <% if(bookinstance_list[i].status != 'Available') {%>
			   	<span>(Due: <%=bookinstance_list[i].due_back_formatted%>)</span>
			   <%}%>
			   </li>
			<% } %>
			</ul>
		</div>
      </div>
    </div>
  </body>
</html>